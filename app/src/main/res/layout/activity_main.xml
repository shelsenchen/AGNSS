<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/ux_fragment"
        android:name="com.lx.agnss.service.impl.ArFragmentManager"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="9"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintTop_toBottomOf="@+id/sceneform_fragment"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="1">

        <Button
            android:id="@+id/btnMenu01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마커측점" />

        <Button
            android:id="@+id/btnMenu02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좌표측정" />

        <Button
            android:id="@+id/btnMenu03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거리측정" />

        <Button
            android:id="@+id/btnMenu04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화면캡쳐" />

        <Button
            android:id="@+id/btnMenu05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="토지알림e" />



    </LinearLayout>
</android.support.constraint.ConstraintLayout>