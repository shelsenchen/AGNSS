<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/masterLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/ux_fragment"
            android:name="com.lx.agnss.service.impl.ArFragmentManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#FFFFFF"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="left|bottom"
                    android:paddingLeft="25dp"
                    android:paddingBottom="25dp"
                    android:background="#2b3251"
                    android:textColor="#ffffff"
                    android:text="디바이스 좌표 정보"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/locationView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Lon : , Lat :  "
                    android:textAlignment="textEnd"
                    android:textSize="24sp"
                    android:background="#88ffffff"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                    app:layout_constraintEnd_toEndOf="parent" />
                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="DRAWER"
                    android:textSize="48sp" />-->
            </LinearLayout>


        </FrameLayout>


    </android.support.v4.widget.DrawerLayout>





    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="1">

        <LinearLayout
            android:id="@+id/menuLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/btnMenu01"
                android:layout_width="60dp"
                android:layout_height="40sp"
                android:layout_margin="3sp"
                android:background="@drawable/ic_menu_btn"
                android:text="마커&#10;측점"
                android:textColor="#eeeeee"
                android:textSize="13sp"
                android:paddingLeft="3sp"
                android:drawableLeft="@drawable/ic_marker_w"
                android:drawableStart="@drawable/ic_marker_w"
                />

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/btnMenu02"
                android:layout_width="60dp"
                android:layout_height="40sp"
                android:layout_margin="3sp"
                android:background="@drawable/ic_menu_btn"
                android:text="좌표&#10;측정"
                android:textColor="#eeeeee"
                android:textSize="13sp"
                android:paddingLeft="3sp"
                android:drawableLeft="@drawable/ic_coordnate_w"
                android:drawableStart="@drawable/ic_coordnate_w"
                />

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/btnMenu03"
                android:layout_width="60dp"
                android:layout_height="40sp"
                android:layout_margin="3sp"
                android:background="@drawable/ic_menu_btn"
                android:text="거리&#10;측정"
                android:textColor="#eeeeee"
                android:textSize="13sp"
                android:paddingLeft="3sp"
                android:drawableLeft="@drawable/ic_distance_w"
                android:drawableStart="@drawable/ic_distance_w"
                />

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/btnMenu04"
                android:layout_width="60dp"
                android:layout_height="40sp"
                android:layout_margin="3sp"
                android:background="@drawable/ic_menu_btn"
                android:text="화면&#10;캡쳐"
                android:textColor="#eeeeee"
                android:textSize="13sp"
                android:paddingLeft="3sp"
                android:drawableLeft="@drawable/ic_screenshot_w"
                android:drawableStart="@drawable/ic_screenshot_w"
                />

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/btnMenu05"
                android:layout_width="60dp"
                android:layout_height="40sp"
                android:layout_margin="3sp"
                android:background="@drawable/ic_menu_btn"
                android:text="토지&#10;알림e"
                android:textAllCaps="false"
                android:textColor="#eeeeee"
                android:textSize="13sp"
                android:paddingLeft="3sp"
                android:drawableLeft="@drawable/ic_link_w"
                android:drawableStart="@drawable/ic_link_w"
                />

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/btnJeonJuBuildingDEM_0"
                android:layout_width="60dp"
                android:layout_height="40sp"
                android:layout_margin="3sp"
                android:background="@drawable/ic_menu_btn"
                android:text="전주&#10;건물"
                android:textAllCaps="false"
                android:textColor="#eeeeee"
                android:textSize="13sp"
                android:paddingLeft="3sp"
                android:drawableLeft="@drawable/ic_building_w"
                android:drawableStart="@drawable/ic_building_w"
                />

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/btnJeonJuPointOut_0"
                android:layout_width="60dp"
                android:layout_height="40sp"
                android:layout_margin="3sp"
                android:background="@drawable/ic_menu_btn"
                android:text="전주&#10;지적"
                android:textAllCaps="false"
                android:textColor="#eeeeee"
                android:textSize="13sp"
                android:paddingLeft="3sp"
                android:drawableLeft="@drawable/ic_land_w"
                android:drawableStart="@drawable/ic_land_w"
                />

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/btnYoungSanBuildingDEM_0"
                android:layout_width="60dp"
                android:layout_height="40sp"
                android:layout_margin="3sp"
                android:background="@drawable/ic_menu_btn"
                android:text="용산&#10;건물"
                android:textAllCaps="false"
                android:textColor="#eeeeee"
                android:textSize="13sp"
                android:paddingLeft="3sp"
                android:drawableLeft="@drawable/ic_building_w"
                android:drawableStart="@drawable/ic_building_w"
                />


            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/btnYoungSanPointOut_0"
                android:layout_width="60dp"
                android:layout_height="40sp"
                android:layout_margin="3sp"
                android:background="@drawable/ic_menu_btn"
                android:text="용산&#10;지적"
                android:textAllCaps="false"
                android:textColor="#eeeeee"
                android:textSize="13sp"
                android:paddingLeft="3sp"
                android:drawableLeft="@drawable/ic_land_w"
                android:drawableStart="@drawable/ic_land_w"
                />
            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/open"
                android:layout_width="60dp"
                android:layout_height="40sp"
                android:layout_margin="3sp"
                android:background="@drawable/ic_menu_btn"
                android:text="열기&#10;"
                android:textAllCaps="false"
                android:textColor="#eeeeee"
                android:textSize="13sp"
                android:paddingLeft="3sp"
                android:drawableLeft="@drawable/ic_land_w"
                android:drawableStart="@drawable/ic_land_w"
                />
            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/close"
                android:layout_width="60dp"
                android:layout_height="40sp"
                android:layout_margin="3sp"
                android:background="@drawable/ic_menu_btn"
                android:text="닫기&#10;"
                android:textAllCaps="false"
                android:textColor="#eeeeee"
                android:textSize="13sp"
                android:paddingLeft="3sp"
                android:drawableLeft="@drawable/ic_land_w"
                android:drawableStart="@drawable/ic_land_w"
                />



        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/mapLayout"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <fragment
            android:id="@+id/mapFragment"
            class="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_map_gb_box" />
    </FrameLayout>
<!--

    <TextView
        android:id="@+id/locationView"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Lon : , Lat :  "
        android:textAlignment="textEnd"
        android:textSize="24sp"
        android:background="#88ffffff"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent" />
-->

    <TextView
        android:id="@+id/distanceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:textColor="#FFEE00"
        android:text=""
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>