<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#005DAD" />
            <gradient android:angle="-90" android:startColor="#005DAD" android:endColor="#4190D3"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4682b4" />
            <solid android:color="#4682b4"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4682b4" />
            <gradient android:angle="-90" android:startColor="#77ABD6" android:endColor="#4682b4" />
        </shape>
    </item>
</selector>